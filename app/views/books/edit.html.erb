<h1>Editing Book</h1>

<div class ="error" >
<% if @book.errors.any? %>
  There is an error in your entry(<%= @book.errors.count %>)
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <label for="book_title-">Title</label>
  <%= f.text_field :title %>

  <label for="book_body">Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

  <span><%= link_to 'Show', book_path(@book.id) %></span>
  <span> | </span>
  <span><%= link_to 'Back', "/books" %></span>

